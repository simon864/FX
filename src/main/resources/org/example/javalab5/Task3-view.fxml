<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javalab5.Task3Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Spinner fx:id="pizzaSpinner" editable="true" initialValue="1" max="10" min="0" prefWidth="60.0" />
                <CheckBox fx:id="pizzaCheckBox" mnemonicParsing="false" text="Пицца (300 руб.)" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Spinner fx:id="burgerSpinner" editable="true" initialValue="1" max="10" min="0" prefWidth="60.0" />
                <CheckBox fx:id="burgerCheckBox" mnemonicParsing="false" text="Бургер (250 руб.)" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Spinner fx:id="sushiSpinner" editable="true" initialValue="1" max="10" min="0" prefWidth="60.0" />
                <CheckBox fx:id="sushiCheckBox" mnemonicParsing="false" text="Суши (400 руб.)" />
            </children>
        </HBox>
        <Button mnemonicParsing="false" onAction="#generateCheck" text="Оформить заказ" />
        <Label fx:id="resultLabel"/>
    </children>
</VBox>